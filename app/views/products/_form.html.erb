  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.label :drop_off_point %><br>
    <%= f.text_field :drop_off_point %>
  </div>

 <div class="field">

   <% if @product.image.exists? %>
      <%= image_tag @product.image.url %><br/>
  <% end %>

  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
